<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/instructionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INSTRUCTIONS"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="86dp"
        android:layout_height="98dp"
        android:layout_marginTop="204dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.895"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_menu_20" />

    <TextView
        android:id="@+id/firstView"
        android:layout_width="263dp"
        android:layout_height="352dp"
        android:layout_marginTop="120dp"
        android:text="The task bar located at the top right allows you to access buttons that open the music player, upload images and the daily task feature.
"        android:visibility="visible"

        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/fifthView"
        android:layout_width="350dp"
        android:layout_height="352dp"
        android:layout_marginTop="120dp"
        android:text="When you go to the task bar and click images, you will be lead to this screen.Images already selected will appear. Press the plus to upload a image.
"        android:visibility="invisible"

        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/secondView"
        android:visibility="invisible"

        android:layout_width="263dp"
        android:layout_height="352dp"
        android:layout_marginTop="120dp"
        android:text="When you click on the music player you will have the option to select audio which will allow you to upload your music files
"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/thirdView"
        android:visibility="invisible"

        android:layout_width="263dp"
        android:layout_height="352dp"
        android:layout_marginTop="120dp"
        android:text="Click pause, play, skip and backwards in order to pause, play the song, and change the song
"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/buttonInstructions"
        android:visibility="invisible"

        android:layout_width="370dp"
        android:layout_height="352dp"
        android:layout_marginTop="450dp"
        android:text="  Backwards     Play       Pause           Skip
"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/playPauseButtonMiniView"
        android:layout_width="346dp"
        android:layout_height="151dp"
        android:layout_marginTop="340dp"
        android:background="@null"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@drawable/musicinstructions" />
    <ImageView
        android:id="@+id/descrptions"
        android:layout_width="346dp"
        android:layout_height="151dp"
        android:layout_marginTop="340dp"
        android:background="@null"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@drawable/descriptioninstructions" />

    <ImageView
        android:id="@+id/imageFifth"
        android:layout_width="346dp"
        android:layout_height="151dp"
        android:layout_marginTop="340dp"
        android:background="@null"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@drawable/addingimagesinstruction" />

    <ImageView
        android:id="@+id/ss1"
        android:layout_width="265dp"
        android:layout_height="62dp"
        android:layout_marginTop="380dp"
        android:background="@null"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@drawable/ss1" />

    <Button
        android:id="@+id/nextbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="508dp"
        android:text="NEXT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>